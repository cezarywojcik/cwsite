extends layout

block content
  div.article
    div.article-title.
      Contact Me
    hr
    div.article-content
      p Use the form below if you want to send me a question or message, and I will get back to you as soon as I can.
      if errors
        for error in errors
          p.error #{error}
      form(method="POST")
        | Your Name:
        br
        input(type="text", name="name")
        br
        | Your Email:
        br
        input(type="text", name="email")
        br
        | Your Message
        br
        div
          textarea(name="message", cols="30", rows="10")
        input(type="submit", value="Send")
    div.clearfix

